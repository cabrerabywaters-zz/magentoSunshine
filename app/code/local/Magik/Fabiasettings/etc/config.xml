<?xml version="1.0"?>
<config>
    <modules>
        <Magik_Fabiasettings>
            <version>0.1.6</version>
        </Magik_Fabiasettings>
    </modules>
    <admin>
        <routers>
            <fabiasettings>
                <use>admin</use>
                <args>
                    <module>Magik_Fabiasettings</module>
                    <frontName>fabiasettings</frontName>
                </args>
            </fabiasettings>
        </routers>
    </admin>            
    <adminhtml>
        <layout>
            <updates>
                <fabiasettings>
                    <file>fabiasettings.xml</file>
                </fabiasettings>
            </updates>
        </layout>
        
        <translate>
         <modules>
             <Magik>
                 <files>
                     <default>Magik_Fabiasettings.csv</default>
                 </files>
             </Magik>
         </modules>
     </translate>
     <acl>
         <resources>
            <admin>
               <children>
                  <system>
                     <children>
                         <config>
                             <children>
                                 <fabiasettings>
                                     <title>Fabia Theme Settings</title>
                                 </fabiasettings>
                             </children>
                         </config>
                     </children>
                 </system>
                 <magik>
                     <children>
                        <fabia>
                            <title>Fabia</title>
                            <children>
                                <settings>
                                    <title>Theme Settings</title>
                                </settings> 
                                <restore>
                                    <title>Restore Defaults</title>
                                </restore>
                            </children>
                        </fabia>
                    </children>
                </magik>
            </children>
        </admin>
    </resources>
</acl>
</adminhtml>
<global>
    <blocks>
        <fabiasettings>
            <class>Magik_Fabiasettings_Block</class>
        </fabiasettings>
    </blocks>
    <helpers>
        <fabiasettings>
            <class>Magik_Fabiasettings_Helper</class>
        </fabiasettings>
    </helpers>
    <models>
        <fabiasettings>
            <class>Magik_Fabiasettings_Model</class>
        </fabiasettings>
    </models>
    <resources>
        <fabiasettings_setup>
            <setup>
                <module>Magik_Fabiasettings</module>
                <class>Magik_Fabiasettings_Model_Resource_Mysql4_Setup</class>
            </setup>
            <connection>
                <use>core_setup</use>
            </connection>
        </fabiasettings_setup>
        <fabiasettings_write>
            <connection>
              <use>core_write</use>
          </connection>
      </fabiasettings_write>
      <fabiasettings_read>
         <connection>
            <use>core_read</use>
        </connection>
    </fabiasettings_read>
</resources>
</global>
<default>
  <fabiasettings>
     <fabiasettings_appearance>
        <footer>informative</footer>       			
        <font></font>								      
    </fabiasettings_appearance>
    <fabiasettings_header>
        <navigation_home>0</navigation_home>                               
    </fabiasettings_header>
    <fabiasettings_menu>
        <navigation_menu_type>mega-menu</navigation_menu_type>   
                                      
    </fabiasettings_menu>
    <fabiasettings_labels>
        <new_label>1</new_label>
        <new_label_text>New</new_label_text>
        <new_label_position>top-left</new_label_position>
        <sale_label>1</sale_label>
        <sale_label_text>Sale</sale_label_text>
        <sale_label_position>top-right</sale_label_position>
    </fabiasettings_labels>
    <fabiasettings_footer>
     <footer_google_analytics></footer_google_analytics>
     <footer_google_analytics_path></footer_google_analytics_path>                                
 </fabiasettings_footer>
 <fabiasettings_social>
     <social_link>1</social_link>
     <facebook_social_link>1</facebook_social_link>
     <facebook_social_link_path>#</facebook_social_link_path>
     <twitter_social_link>1</twitter_social_link>
     <twitter_social_link_path>#</twitter_social_link_path>
     <googleplus_social_link>1</googleplus_social_link>
     <googleplus_social_link_path>#</googleplus_social_link_path>
     <rss_social_link>1</rss_social_link>
     <rss_social_link_path>#</rss_social_link_path>     
     <pinterest_social_link>1</pinterest_social_link>
     <pinterest_social_link_path>#</pinterest_social_link_path>
     <linkedin_social_link>1</linkedin_social_link>
     <linkedin_social_link_path>#</linkedin_social_link_path>
     <youtube_social_link>1</youtube_social_link>
     <youtube_social_link_path>#</youtube_social_link_path>
 </fabiasettings_social>
 <fabiasettings_products>
    <upsell_product>1</upsell_product>
    <related_product>1</related_product>
    <nextprevious_product>1</nextprevious_product>
</fabiasettings_products>                                              
<fabiasettings_shoppingcart>
    <shoppingcart_top>1</shoppingcart_top>
</fabiasettings_shoppingcart>
<fabiasettings_newsletterpopup>
    <newsletterpopup_enable>1</newsletterpopup_enable>
</fabiasettings_newsletterpopup>
<fabiasettings_quickview>
    <enable>1</enable>
</fabiasettings_quickview>
<fabiasettings_cloudzoom>
    <cloudzoom_view>1</cloudzoom_view>
</fabiasettings_cloudzoom>
<animatecss>
    <enableanimate>1</enableanimate>
</animatecss>                       
</fabiasettings>
</default>
</config>