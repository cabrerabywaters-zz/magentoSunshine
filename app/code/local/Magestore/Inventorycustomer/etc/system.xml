<config>    
    <sections>
        <inventoryplus translate="label" module="inventoryplus">            
            <groups>
                <customer translate="label">
                    <label>Customer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>        
                        <minimum_orders_to_be_vip translate="label">
                            <label>Minimum Number Of Orders To Be VIP</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </minimum_orders_to_be_vip>
                        <predefined_action>
                            <label>Pre-defined Action</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </predefined_action>
                        <predefined_result>
                            <label>Pre-defined Result</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </predefined_result>
                    </fields>
                </customer>
            </groups>
        </inventoryplus>
    </sections>
</config>