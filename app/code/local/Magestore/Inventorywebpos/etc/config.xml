<?xml version="1.0"?>
<config>
    <modules>
        <Magestore_Inventorywebpos>
            <version>0.1.1</version>
        </Magestore_Inventorywebpos>
    </modules>
    <frontend>
        <routers>
            <inventorywebpos>
                <use>standard</use>
                <args>
                    <module>Magestore_Inventorywebpos</module>
                    <frontName>inventorywebpos</frontName>
                </args>
            </inventorywebpos>
        </routers>
        <layout>
            <updates>
                <inventorywebpos>
                    <file>inventorywebpos.xml</file>
                </inventorywebpos>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorywebpos>
                    <files>
                        <default>Magestore_Inventorywebpos.csv</default>
                    </files>
                </Magestore_Inventorywebpos>
            </modules>
        </translate>       
    </frontend>
    <admin>
        <routers>
            <inventorywebposadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Inventorywebpos</module>
                    <frontName>inventorywebposadmin</frontName>
                </args>
            </inventorywebposadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <inventorywebpos>
                    <file>inventorywebpos.xml</file>
                </inventorywebpos>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorywebpos>
                    <files>
                        <default>Magestore_Inventorywebpos.csv</default>
                    </files>
                </Magestore_Inventorywebpos>
            </modules>
        </translate>    
    </adminhtml>  
    <global>
        <events>
            <webpos_block_listproduct_event>
                <observers>
                    <magestore_inventorywebpos>
                        <type>singleton</type>
                        <class>inventorywebpos/observer</class>
                        <method>webposBlockListproductEvent</method>
                    </magestore_inventorywebpos>
                </observers>
            </webpos_block_listproduct_event>
            <!-- add more tab in warehouse -->    
            <inventory_adminhtml_add_tab_warehouse>
                <observers>
                    <inventorywarehouse_observers>
                        <type>model</type>
                        <class>inventorywebpos/observer</class>
                        <method>addWarehouseTab</method>
                    </inventorywarehouse_observers>
                </observers>
            </inventory_adminhtml_add_tab_warehouse>
        </events>
        <models>
            <inventorywebpos>
                <class>Magestore_Inventorywebpos_Model</class>
                <resourceModel>inventorywebpos_mysql4</resourceModel>
            </inventorywebpos>
            <inventorywebpos_mysql4>
                <class>Magestore_Inventorywebpos_Model_Mysql4</class>
                <entities>
                    <webposuser>
                        <table>erp_inventory_warehouse_webpos_user</table>
                    </webposuser>
                </entities>
            </inventorywebpos_mysql4>
        </models>
        <resources>
            <inventorywebpos_setup>
                <setup>
                    <module>Magestore_Inventorywebpos</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventorywebpos_setup>
            <inventorywebpos_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventorywebpos_write>
            <inventorywebpos_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventorywebpos_read>
        </resources>
        <blocks>
            <inventorywebpos>
                <class>Magestore_Inventorywebpos_Block</class>
            </inventorywebpos>           
        </blocks>
        <helpers>
            <inventorywebpos>
                <class>Magestore_Inventorywebpos_Helper</class>
            </inventorywebpos>
        </helpers>
    </global>
</config>